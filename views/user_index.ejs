<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <!-- <h1>CRUD OPERATIONS SAMARTH NAIK</h1> -->

    <div class="container">
        <h2><%= title %></h2>

        <a href="/add" class="btn btn-sm btn-primary">ADD USER</a><br/><br/>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>email</th>
                    <th>phone</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% details.forEach(function(detail){ %>
                 <tr>
                    <td ><%= detail.name %></td>
                    <td><%= detail.email %></td>
                    <td><%= detail.phone %></td>
                    <td>
                        <a href="edit/<%= detail.id%>" class="btn btn-sm btn-primary">EDIT</a>
                        <a href="delete/<%= detail.id %>" class="btn btn-sm btn-danger">DELETE</a>
                    
                    </td>
                 </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>